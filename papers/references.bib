	keywords = {Monitoring, Wireless communication, Wireless sensor networks, Logic gates, Reliability, Strain, Prototypes, Monitoring System, Reliability engineering, Redundancy, Availability Analysis, Failure Tolerant WSN, Reliability theory, Space habitat, Space missions},
