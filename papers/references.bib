	keywords = {Data models, Fault detection, machine learning, IoT, anomaly detection, Wireless sensor networks, reliability, Navigation, fault detection, fault diagnosis, Runtime, Environmental factors, Habitats, pattern recognition},
	pages = {756--758},
	file = {IEEE Xplore Abstract Record:/Users/saurabh/Zotero/storage/E9K99H9E/10621503.html:text/html;IEEE Xplore Full Text PDF:/Users/saurabh/Zotero/storage/7GMK6IRZ/Band and Foerster - 2024 - (POSTER) Navigating the Unknown Anomaly Detection.pdf:application/pdf},
